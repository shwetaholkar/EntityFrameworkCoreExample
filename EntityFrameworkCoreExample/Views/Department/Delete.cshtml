
@model Department

<h1>About to delete Department Id: @Model.Id. Please confirm</h1>

<table class="table table-bordered">
    <tbody>
        <tr>
            <th>Department Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Location-Ref-Id</th>
            <td>@Model.LocationRefId</td>
        </tr>
       
    </tbody>
</table>

<form asp-controller="Department" asp-action="DeleteDepartment" asp-route-id="@Model.Id">
    <div>
        <button type="submit" class="btn btn-primary">Delete this User</button>
        <a asp-controller="Department" asp-action="Index" class="btn btn-primary">Back to Listing</a>
    </div>
</form>

@using EntityFrameworkCoreExample.Models.ViewModel
@model List<EmployeeDeptWise>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container">
    @foreach (var item in Model)
    {
        <div class="row">
            <h3>@item.DeptName</h3>

            <table class="table">
                <thead>
                    <tr>

                        <th>EmployeeId</th>
                        <th>EmployeeName</th>
                        <th>Salary</th>
                        <th>Address</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var emp in item.Employees)
                    {
                        <tr>
                            <th>@emp.Id</th>
                            <th>@emp.Name</th>
                            <th>@emp.Salary</th>
                            <th>@emp.Address</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    </div>



<div class="container">
    <form method="post" asp-controller="Employee" asp-action="CreateEmployee">
        <div class="row">
            <div class="form-control">
                <label>Employee-Name</label>
                <input type="text" asp-for="Name" />
            </div>

            <div class="form-control">
                <label>Department Id</label>
                @{
                    using var employeeContext = new EmployeeContext();
                    var data = employeeContext.Departments.ToList();
                    var selectBox = new SelectList(data, "Id", "Name");
                }
                <select asp-for="DepartmentRefId" class="form-control" asp-items="selectBox" ></select>

               @* <input type="text" asp-for="DepartmentRefId" />*@
            </div>

            <div class="form-control">
                <label>Salary</label>
                <input type="text" asp-for="Salary" />
            </div>
            <div class="form-control">
                <label>Address</label>
                <input type="text" asp-for="Address" />
            </div>
            <div class="form-control">
                <label>Job Id </label>
                 @{
                    using var employeeContext1 = new EmployeeContext();
                    var data1 = employeeContext.Jobs.ToList();
                    var selectBox1 = new SelectList(data1, "Id", "Name");
                }
                <select asp-for="JobId" class="form-control" asp-items="selectBox1" ></select>
               @* <input type="text" asp-for="JobId" />*@
            </div>
            
            <div class="form-control">
                <input type="submit" values="Submit" />
                <input type="reset" values="Cancel" />
            </div>
        </div>
    </form>
</div>
